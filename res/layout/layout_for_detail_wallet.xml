<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    tools:context="com.looper.loop.PreferencesFragment" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:columnCount="2" >

            <TextView
                android:id="@+id/tv_layoutdetailwallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textColor="#474747"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_layoutdetailwallet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_row="0"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_row="1"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2" >

            <TextView
                android:id="@+id/tv_layoutdetailwallet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_layoutdetailwallet_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="15dp"
                android:text="TextView"
                android:textColor="#7f7f7f"
                android:textSize="12sp"
                android:textStyle="italic" />

        </GridLayout>

    </LinearLayout>

</GridLayout>