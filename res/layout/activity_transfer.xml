<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:columnCount="1" >

        <Button
            android:id="@+id/btn_transfer_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/wallet_list_back" />

        <TextView
            android:id="@+id/tv_transfer_title"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Transfer"
            android:textColor="#33ccff"
            android:textSize="18sp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_income_night"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/bg_trans_white1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_transfer_amount"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Amount"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/txt_transfer_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_trans"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:textColor="#fff"
                    android:textColorHint="#989898"
                    android:textSize="15sp" />

            </LinearLayout>
            	<requestFocus />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/bg_trans_white2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_transfer_from"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="From"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spn_transfer_from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_trans_choose" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/bg_trans_white2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_transfer_to"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical|"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="To"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spn_transfer_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_trans_choose" />

            </LinearLayout>
            
            <Button
                android:id="@+id/btn_transfer_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="#e4e0c5"
                android:text="SUBMIT"
                android:textColor="#462e17" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>